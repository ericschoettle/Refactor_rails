<div class="col s4" id="product_id_<%= product.id %>" >
  <h4><%= link_to product.name, product_path(product), remote: true %></h4>
  <p class="product-description"><%= product.description %></p>
  <p><%= number_to_currency product.price %></p>
  <%= form_for @order_item, remote: true do |f| %>
    <%= f.hidden_field :product_id, value: product.id %>
    <%= f.label "quantity" %>
    <%= f.number_field :quantity, placeholder: 1 %>
    <span class="waves-effect waves-light btn"><%= f.submit "Add to cart", remote: true %></span>
  <% end %>
</div>
